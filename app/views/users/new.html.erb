<%= render "shared/errors", obj: @user %>

<section class="vh-100">
  <div class="container-fluid mt-5">
    <div class="row d-flex justify-content-center align-items-center h-100">
     
      <div class="col-md-8 col-lg-6 col-xl-4">
        <div class="d-flex flex-row align-items-center justify-content-center">
          <h3 class="link-primary">Sign up</h3>
        </div>

        <div class="divider d-flex align-items-center my-4"></div>

        <%= form_with(model: @user, local: true) do |f| %>
          <!-- Name input -->
          <div class="form-outline mb-4">
            <%= f.text_field :name, id: "form3Example2",
                                        class: "form-control form-control-lg",
                                        placeholder: "Enter your name" %>
          </div>

          <!-- Email input -->
          <div class="form-outline mb-4">
            <%= f.email_field :email, id: "form3Example3",
                                      class: "form-control form-control-lg",
                                      placeholder: "Enter your best email" %>
          </div>

          <!-- Password input -->
          <div class="form-outline mb-3">
            <%= f.password_field :password, id: "form3Example4",
                                            class: "form-control form-control-lg",
                                            placeholder: "Password" %>
          </div>

          <div class="d-flex justify-content-between mb-5 align-items-center">
            <!-- Checkbox -->
            <div class="form-check mb-0">
              <input class="form-check-input me-2" type="checkbox" value="" id="form2Example3" />
              <label class="form-check-label" for="form2Example3">
                Remember me
              </label>
            </div>
          </div>

          <p><%= f.submit "Sign up", class: "btn btn-primary btn-lg",
                                    style: "padding-left: 2.5rem; padding-right: 2.5rem;" %></p>
        <% end %>

      </div>
    </div>
  </div>
</section>
