<%= render "shared/errors", obj: @user %>
<%= form_with(model: @user, local: true) do |f| %>
  <%= f.label :name %>
  <p><%= f.text_field :name, placeholder: "Enter your name" %></p>
  <%= f.label :email %>
  <p><%= f.email_field :email, placeholder: "Enter your email" %></p>
  <%= f.label :password %>
  <p><%= f.password_field :password, placeholder: "Choose your password" %></p>
  
  <p><%= f.submit(@user.new_record? ? "Sign up" : "Update") %></p>
<% end %>

<p><%= link_to "Cancel", root_path  %></p>
