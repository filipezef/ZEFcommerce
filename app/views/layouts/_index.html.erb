<!-- main col index -->
    <div class="col-md-10">
      <% @products.each do |product| %>
        <!-- row product info -->
        <div class="row py-4 mb-2 index-bottom">
          <!-- col product image -->
          <div class="col-md-3 mt-2">
            <%= link_to product, class: "link link-secondary" do %>
              <% name = product.name %>
              <%= image_tag "products/index/#{name}.jpg", class: "img-fluid" %>
            <% end %>
          </div><!-- end col product image -->
          
          <!-- col product info -->
          <div class="col-md-9">
            <%= link_to product do %>
              <p><font face="Arial" size="5px"><%= product.name %> </font>
              <% if product.categories.any?%>
                <% product.categories.each do | category| %>
                  <span class="badge bg-primary text-uppercase"><%= category.name %></span>
                <% end %>
              <% end %>
              </p>
              <p><%= simple_format(truncate(product.description, length: 150)) %></p>
            <% end %>
            <div class="row">
              <div class="col-md-4">
                <h4><strong><%= number_to_currency(product.value) %></strong></h4>
              </div><!-- end col -->
              <div class="col-md-8">
                <i class="bi bi-star-fill"></i>
                <i class="bi bi-star-fill"></i>
                <i class="bi bi-star-fill"></i>
                <i class="bi bi-star-half"></i>
                <i class="bi bi-star"></i>
                <span class="badge bg-success">61 reviews</span>
              </div><!-- end col -->
            </div><!-- end row -->
          </div><!-- end col product info -->
        </div><!-- end row product info --> 
      <% end %>
    </div><!-- end main col -->