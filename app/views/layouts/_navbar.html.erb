<div class="row">
  <div class="nav-header col-md-12 text-center text-light">
    <h1 class="text-uppercase">ZEFcommerce</h1>
    <p class="monospaced">
      &copy;<%= link_to "Filipe Zeferino", "https://zeferino.herokuapp.com/", class: "text-white", target: :_blank %>
      <span class="text-uppercase">All Rights Reserved</span>
    </p>
  </div>
</div><!-- end row -->

<div class="row bottom-rule mt-1">
  <div class="col-sm-12">
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <!-- Container wrapper -->
      <div class="container-fluid">
        <!-- Toggle button -->
        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarNav" aria-controls="navbarNav"
          aria-expanded="false" aria-label="Toggle navigation"
        >
          <span class="navbar-toggler-icon"></span>
        </button>

        <!-- Collapsible wrapper -->
        <div class="collapse navbar-collapse justify-content-center" id="navbarNav">
        
          <!-- links -->
          <ul class="navbar-nav mb-2 mb-lg-0">
            <li class="nav-item dropdown">
              <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                Products
              </a>
              <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                <li><%= link_to "All products", products_path, class: "dropdown-item" %></li>
                <li><hr class="dropdown-divider"></li>
                <li><%= link_to "Aircraft", Category.find_by(name: "Aircraft"), class: "dropdown-item" %></li>
                <li><%= link_to "Jet-fighters", Category.find_by(name: "Jet-fighters"), class: "dropdown-item" %></li>
                <li><%= link_to "Helicopters", Category.find_by(name: "Helicopters"), class: "dropdown-item" %></li>
              </ul>
            </li>

            <li class="nav-item dropdown">
              <% if current_user %>
                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                  <%= current_user.name %>
                </a>
                <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                  <li><%= link_to "Profile", @current_user, class: "dropdown-item" %></li>
                  <li><%= link_to "Edit Profile", edit_user_path(current_user), class: "dropdown-item" %></li>
                  <li><%= link_to 'Logout', logout_path, class: "dropdown-item", method: :delete %></li>
                  <% if current_user.admin? %>
                    <li><hr class="dropdown-divider"></li>
                    <li><%= link_to "Users", users_path, class: "dropdown-item" %></li>
                    <li><%= link_to "Categorires Index", categories_path, class: "dropdown-item" %></li>
                  <% end %>
                </ul>
              <% end %>



              
            </li>
            <li class="nav-item">
              <a class="nav-link active monospaced" aria-current="page" href="https://zeferino.herokuapp.com/" target="_blank">
                <kbd>By &copy;Filipe Zeferino</kbd>
              </a>
            </li>

            <li class="nav-item">
              <!-- Define cart icon action -->
              <% if current_user %>
                <% @shopping_cart = current_user.shopping_carts.last %>
                <%= link_to @shopping_cart, class: "nav-link active" do %>
                  <h6>Cart <i class="bi bi-cart2"></i></h6>
                <% end %>
              <% else %>
                <%= link_to login_path, class: "nav-link active" do %>
                  <i class="bi bi-cart2"></i>
                <% end %>
              <% end %>
            </li>
            <li class="nav-item">
              <!-- Define cart icon action -->
                <% if current_user %>
                  <% @shopping_cart = current_user.shopping_carts.last %>
                  <% if @shopping_cart.products.any? %>
                    <%= link_to payment_path, class: "nav-link active" do %>
                      <h6>Checkout <i class="bi bi-cart-check-fill"></i></h6>
                    <% end %>
                  <% end %>
                <% end %>
            </li>


          </ul>
          <!-- Left links -->
        </div>
        <!-- Collapsible wrapper -->
      </div>
      <!-- Container wrapper -->
    </nav>
  </div>
</div><!-- end row -->
