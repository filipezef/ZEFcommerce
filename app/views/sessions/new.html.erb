<h1>LOGIN</h1>

<%= form_with(scope: :session, url: login_path, local: true) do |f| %>
  <%= f.label :email %>
  <p><%= f.email_field :email, placeholder: "Enter your email" %></p>
  <%= f.label :password %>
  <p><%= f.password_field :password, placeholder: "Enter your password" %></p>
  <p><%= f.submit "Log in" %></p>
<% end %>
<p><%= link_to "Sign up", signup_path  %></p>
<p><%= link_to "Cancel", root_path  %></p>
